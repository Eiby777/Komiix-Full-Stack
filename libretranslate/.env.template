# LibreTranslate Configuration
# Copy this file to .env and update the values as needed

# List of language codes to load (comma-separated)
# Example: es,en,fr,de,it,pt,ru,zh,ja,ko
LT_LOAD_ONLY=es,ja,zh,ko,en

# Directory to store language models (mounted as a volume in docker-compose.yml)
LT_PACKAGE_DIR=/app/models

# API key for LibreTranslate (optional)
# LT_API_KEYS=your-api-key-here

# Enable/disable API key requirement (default: false)
# REQUIRE_API_KEY=false

# Enable/disable web interface (default: true)
# ENABLE_WEB_UI=true

# Host and port to bind to
# HOST=0.0.0.0
# PORT=5000

# Update frequency for language models (in hours, 0 to disable)
# UPDATE_FREQUENCY=24

# Maximum length of text to translate (in characters)
# MAX_TEXT_LENGTH=10000

# Maximum number of requests per minute per IP (0 to disable)
# REQUESTS_PER_MINUTE=0
